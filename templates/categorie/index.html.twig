{% extends 'base.html.twig' %}

{% block title %}Catégories - Révélations
{% endblock %}

{% block body %}
	<!-- Page header with logo and tagline-->
	<header class="header py-5 bg-light border-bottom mb-4">
		<div class="container">
			<div class="text-center my-5">
				<h1 id="category-h1" class="home-h1 fw-bolder rounded-5">Découvrez tous nos domaines d'expertise</h1>
			</div>
		</div>
	</header>

	<!-- Page content-->
	<div class="container">
		<div
			class="row">
			<!-- Main content -->
			<div class="col-lg-10 mx-auto">

				<h2 class="mb-4">Nos articles par catégories</h2>

				<div class="row">
					{% for parentCategory in categoriesGrouped %}
						<div class="col-md-6 col-lg-4 mb-4">
							<div class="card h-100 shadow-sm">
								<div id="header-card-categorie" class="card-header text-white">
									<h4 class="card-title mb-0">
										<i class="bi bi-folder"></i>
										{{ parentCategory.name }}
									</h4>
								</div>
								<div class="card-body">
									{% if parentCategory.categories|length > 0 %}
										<ul class="list-unstyled">
											{% for subCategory in parentCategory.categories %}
												<li class="mb-2">
													<a href="{{ path('app_categorie_show', { id: subCategory.id }) }}" class="text-decoration-none text-black">
														<i class="bi bi-arrow-right-short text-black"></i>
														{{ subCategory.name }}
													</a>
												</li>
											{% endfor %}
										</ul>
									{% else %}
										<p class="text-muted mb-0">
											<em>Aucune sous-catégorie pour le moment</em>
										</p>
									{% endif %}
								</div>
								<div class="card-footer bg-light">
									<div class="d-flex justify-content-between align-items-center">
										<small class="text-muted">
											{% set childCount = parentCategory.categories|length %}
											{{ childCount }}
											sous-catégorie{{ childCount > 1 ? 's' : '' }}
										</small>
										<a href="{{ path('app_categorie_show', { id: parentCategory.id }) }}" class="btn btn-sm categorie">
											Voir tout
											<i class="bi bi-arrow-right"></i>
										</a>
									</div>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>

{% endblock %}
