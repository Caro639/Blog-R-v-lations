{% extends 'base.html.twig' %}

{% block title %}Modifier
	{{ post.title }}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-lg-8 col-md-10">
				<div class="text-center mb-4">
					<h1 class="fw-bold">Modifier l'article</h1>
					<p class="text-muted">{{ post.title }}</p>
				</div>

				<div class="card shadow-sm">
					<div class="card-body p-4">
						{{ include('post/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
					</div>
				</div>

				<div class="d-flex justify-content-between align-items-center mt-3">
					<a href="{{ path('app_profil_post', { id: app.user.id }) }}" class="btn btn-outline-secondary">
						<i class="bi bi-arrow-left"></i>
						Retour à la liste
					</a>

					<div>
						{{ include('post/_delete_form.html.twig') }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script>
		document.addEventListener('DOMContentLoaded', function () {
if (window.reinitializeTomSelect) {
window.reinitializeTomSelect();
}
});
	</script>
{% endblock %}
