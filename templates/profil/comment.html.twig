{% extends 'base.html.twig' %}

{% block title %}Mes commentaires
{% endblock %}

{% block body %}
	<h1 class="text-purple text-center m-5">Mes commentaires</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Content</th>
				<th>IsReply</th>
				<th>CreatedAt</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for comment in comments %}
				<tr>
					<td>{{ comment.id }}</td>
					<td>{{ comment.content }}</td>
					<td>{{ comment.isReply ? 'Yes' : 'No' }}</td>
					<td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						{# Lien vers le post auquel appartient le commentaire #}
						<a href="{{ path('app_post_show', {'id': comment.post.id}) }}" type="button" class="button-purple btn btn-sm mt-4">Voir le post</a>
						<a href="{{ path('app_comment_edit', {'id': comment.id}) }}" type="button" class="btn btn-warning btn-sm mt-4">Modifier</a>

						{# Formulaire de suppression avec CSRF (comme pour les posts) #}
						<form method="post" action="{{ path('app_comment_delete', {'id': comment.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');" class="d-inline">
							<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
							<button type="submit" class="btn btn-danger btn-sm mt-4">Supprimer</button>
						</form>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	{# <a href="{{ path('app_comment_new') }}">Create new</a> #}
{% endblock %}
