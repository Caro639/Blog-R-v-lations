{% extends 'base.html.twig' %}

{% block title %}Mes commentaires
{% endblock %}

{% block body %}
	<h1 class="text-purple text-center m-5">Mes commentaires</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Content</th>
				<th>IsReply</th>
				<th>CreatedAt</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for comment in comments %}
				<tr>
					<td>{{ comment.id }}</td>
					<td>{{ comment.content }}</td>
					<td>{{ comment.isReply ? 'Yes' : 'No' }}</td>
					<td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						{# <a href="{{ path('app_comment_show', {'id': comment.id}) }}">show</a> #}
						<a href="{{ path('app_comment_edit', {'id': comment.id}) }}" type="button" class="btn btn-warning btn-sm mt-4">Modifier</a>
						<a href="{{ path('app_comment_delete', {'id': comment.id}) }}" type="button" class="btn btn-danger btn-sm mt-4">Supprimer</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	{# <a href="{{ path('app_comment_new') }}">Create new</a> #}
{% endblock %}
